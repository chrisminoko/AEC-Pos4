@model IEnumerable<AEC_Pos.Models.InvenTran>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="grid">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TranSourceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TranSourceNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TranSourceType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvenTranDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TranSourceId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TranSourceNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TranSourceType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvenTranDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.InvenTranId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.InvenTranId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.InvenTranId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#grid').DataTable();
        });
    </script>
}
